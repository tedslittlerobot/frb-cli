root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[*.blade.php]
indent_size = 4

[{*.js,*.json}]
indent_size = 2

[*.scss]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[{package.json,composer.json}]
indent_style = space
indent_size = 2
